<h4 class="ui center aligned icon header">
  <i class="circular chat icon red"></i>
  Say somenthing
</h4>
<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui feed">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_with model: @message, url: message_path, class: "ui reply form" do |form| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= form.text_field :body %>
              <%= form.button '<i class="bordered inverted red edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="four wide column">
    <div class="ui inverted vertical menu fluid">
      <a class="active item">
        Home
      </a>
      <a class="item">
        Messages
      </a>
      <a class="item">
        Friends
      </a>
    </div>
  </div>
</div>